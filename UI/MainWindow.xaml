<Window x:Class="UI.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:UI"
		mc:Ignorable="d"
		Height="660" Width="920"
		WindowStyle="None"
		ResizeMode="NoResize"
		Background="Transparent"
		AllowsTransparency="True">

    <Window.Resources>
        <ControlTemplate x:Key="NoMouseOverButtonTemplate" 
                  TargetType="Button">
            <Border Background="{TemplateBinding Background}"
           BorderBrush="{TemplateBinding BorderBrush}"
           BorderThickness="{TemplateBinding BorderThickness}">
                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                       VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
            </Border>

            <ControlTemplate.Triggers>
                <Trigger Property="IsEnabled"
              Value="False">
                    <Setter Property="Background"
               Value="{x:Static SystemColors.ControlLightBrush}" />
                    <Setter Property="Foreground"
               Value="{x:Static SystemColors.GrayTextBrush}" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Window.Resources>

    <Border Background="#272537"
			CornerRadius="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            <StackPanel Grid.Row="0">

                <TextBlock x:Name="Username"
                   Text="Username"
				   VerticalAlignment="Stretch"
				   HorizontalAlignment="Stretch"
                           Height="55"
				   Foreground="White"
				   FontSize="22"
				   Margin="15,20,0,0"
                   MouseLeftButtonDown="Username_MouseLeftButtonDown" TextWrapping="NoWrap"/>
                
            </StackPanel>

            <StackPanel Grid.Row="1">

                <RadioButton Content="Home"
							 Height="50"
							 Foreground="White"
							 FontSize="14"
							 Style="{StaticResource MenuBtnStyle}"/>

                <RadioButton Content="Video"
							 Height="50"
							 Foreground="White"
							 FontSize="14"
							 Style="{StaticResource MenuBtnStyle}"/>

                <RadioButton Content="Audio"
							 Height="50"
							 Foreground="White"
							 FontSize="14"
							 Style="{StaticResource MenuBtnStyle}"/>

                <RadioButton Content="Image"
							 Height="50"
							 Foreground="White"
							 FontSize="14"
							 Style="{StaticResource MenuBtnStyle}"/>

                <RadioButton Content="History"
							 Height="50"
							 Foreground="White"
							 FontSize="14"
							 Style="{StaticResource MenuBtnStyle}"/>

                <RadioButton Content="More"
							 Height="50"
							 Foreground="White"
							 FontSize="14"
							 Style="{StaticResource MenuBtnStyle}"/>

                <Button x:Name="btn_Exit"
                        Content="Exit"
                        Background="Transparent"
                        Foreground="Red"
                        Margin="0,220,0,0"
                        Height="65"
                        FontSize="20"
                        BorderThickness="0"
                        Template="{StaticResource NoMouseOverButtonTemplate}" Click="btn_Exit_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
